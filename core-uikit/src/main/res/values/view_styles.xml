<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string" />
    <attr name="textColor" format="reference|integer" />
    <attr name="textSize" format="dimension" />

    <declare-styleable name="GradientImageView">
        <attr name="gradient_start_color" format="color" />
        <attr name="gradient_end_color" format="color" />
        <attr name="gradient_alpha" format="float" />
        <attr name="gradient_direction" format="enum">
            <enum name="left_to_right" value="0" />
            <enum name="right_to_left" value="1" />
            <enum name="top_to_bottom" value="2" />
            <enum name="bottom_to_top" value="3" />
            <enum name="left_top_to_right_bottom" value="4" />
            <enum name="left_bottom_to_right_top" value="5" />
            <enum name="right_top_to_left_bottom" value="6" />
            <enum name="right_bottom_to_left_top" value="7" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FadeInTextView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="SlideDownTextView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="AnimateTextView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="animType" format="enum">
            <enum name="fade_in" value="0" />
            <enum name="fade_out" value="1" />
            <enum name="slide_down" value="2" />
            <enum name="slide_up" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RhombusChartView">
        <attr name="top_percent" format="float" />
        <attr name="bottom_percent" format="float" />
        <attr name="left_percent" format="float" />
        <attr name="right_percent" format="float" />
        <attr name="chart_color" format="color" />
        <attr name="chart_width" format="dimension" />
    </declare-styleable>
</resources>